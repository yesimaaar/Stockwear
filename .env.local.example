# --- Configuración General ---
# URL base del sitio (usado para generar links absolutos en el servidor)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --- Supabase ---
# URL pública de Supabase (proporcionada en el panel de Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co

# ANON public key (no usar la service_role en el cliente)
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key

# Service Role Key (SOLO para uso en servidor, nunca exponer al cliente)
# SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# Nombre del bucket de imágenes de productos (por defecto: product-images)
NEXT_PUBLIC_SUPABASE_PRODUCT_BUCKET=product-images

# --- Seguridad y Administración ---
# Código para registrar nuevos administradores
ADMIN_REGISTRATION_CODE=admin123

# --- Servicios Externos ---
# Google Maps API Key (para geocodificación y mapas)
# Puede ser pública si tiene restricciones de dominio adecuadas
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=tu-google-maps-api-key

# Servicio de Embeddings (para búsqueda visual/IA)
EMBEDDING_SERVICE_URL=https://tu-servicio-embedding.com
EMBEDDING_SERVICE_TOKEN=tu-token-servicio-embedding
